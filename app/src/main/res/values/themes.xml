<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.PracticeV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your default background -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Used for activities where you don't want an ActionBar (Login, Register, Main) -->
    <style name="Theme.PracticeV.NoActionBar" parent="Theme.PracticeV">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.PracticeV.SplashScreen" parent="Theme.PracticeV.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
