<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.psu.sweng888.practicev">

    <!-- Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PracticeV">

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCfv8JZJooyVBwaIKqFumtycu24hamjRkc"/>

        <!-- Splash Screen as the entry point -->
        <activity
            android:name="edu.psu.sweng888.practicev.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PracticeV.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login screen -->
        <activity
            android:name="edu.psu.sweng888.practicev.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.PracticeV.NoActionBar" />

        <!-- Register screen -->
        <activity
            android:name="edu.psu.sweng888.practicev.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.PracticeV.NoActionBar" />

        <!-- Main activity with Navigation Drawer -->
        <activity
            android:name="edu.psu.sweng888.practicev.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PracticeV.NoActionBar" />
    </application>

</manifest>
